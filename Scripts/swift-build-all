#/bin/sh

# Simple script to run "swift build" cross-compilation for all Android architectures and copy generated .so files to their appropriate folders

/usr/bin/swift build "$@" --build-tests --destination "/root/android-x86_64.json" -Xlinker -rpath -Xlinker "/root/swift-5.6-android-x86_64-24-sdk/usr/lib/swift/android"
cp *.so /root/lib/x86_64/

/usr/bin/swift build "$@" --build-tests --destination "/root/android-aarch64.json" -Xlinker -rpath -Xlinker "/root/swift-5.6-android-aarch64-24-sdk/usr/lib/swift/android"
cp *.so /root/lib/arm64-v8a/

/usr/bin/swift build "$@" --build-tests --destination "/root/android-armv7.json" -Xlinker -rpath -Xlinker "/root/swift-5.6-android-armv7-24-sdk/usr/lib/swift/android"
cp *.so /root/lib/armeabi-v7a/


